<%= render 'shared/page_title', title: "Add a new game" %>
<% if @game.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@game.errors.count, "error" )%>
          prohibited this <%= @game.class %> from being saved:
          </h2>
          <div class="panel-body">
              <ul>
                <% @game.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



<div class="row">
  <div class="col-md-12">
    <%= form_for(@game, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of game", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter your review of the game"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge btn-danger" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to games listing", games_path %> ]
    </div>
  </div>
</div>